<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_album_art_b"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:background="#ffffac6e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Song Name Here"
        android:id="@+id/textview_song_name_b"
        android:layout_alignTop="@+id/imageview_album_art_b"
        android:layout_alignLeft="@+id/textview_artist_name_b"
        android:layout_alignStart="@+id/textview_artist_name_b"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="0dp"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/btn_song_up"
        android:layout_toStartOf="@+id/btn_song_up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist Name Here"
        android:id="@+id/textview_artist_name_b"
        android:layout_below="@+id/textview_song_name_b"
        android:layout_toRightOf="@+id/imageview_album_art_b"
        android:layout_toEndOf="@+id/imageview_album_art_b"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/btn_song_up"
        android:layout_toStartOf="@+id/btn_song_up"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FF424242" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Album Name Here"
        android:id="@+id/textview_album_name_b"
        android:layout_toEndOf="@+id/imageview_album_art_b"
        android:layout_toRightOf="@+id/imageview_album_art_b"
        android:layout_below="@+id/textview_artist_name_b"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/btn_song_del"
        android:layout_toStartOf="@+id/btn_song_del"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#ff424242" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_song_up"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:layout_alignTop="@+id/textview_song_name_b"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/uparrow" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_song_del"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:layout_above="@+id/btn_song_down"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_song_up"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignLeft="@+id/btn_song_up"
        android:src="@drawable/remove" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_song_down"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:layout_alignBottom="@+id/imageview_album_art_b"
        android:layout_alignLeft="@+id/btn_song_del"
        android:layout_alignStart="@+id/btn_song_del"
        android:layout_alignParentRight="true"
        android:src="@drawable/downarrow" />

</RelativeLayout>
