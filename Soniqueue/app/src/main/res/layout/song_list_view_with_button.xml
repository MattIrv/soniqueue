<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_album_art_b"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:background="#ffffac6e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Song Name Here"
        android:id="@+id/textview_song_name_b"
        android:layout_alignTop="@+id/imageview_album_art_b"
        android:layout_alignLeft="@+id/textview_artist_name_b"
        android:layout_alignStart="@+id/textview_artist_name_b"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist Name Here"
        android:id="@+id/textview_artist_name_b"
        android:layout_below="@+id/textview_song_name_b"
        android:layout_toRightOf="@+id/imageview_album_art_b"
        android:layout_toEndOf="@+id/imageview_album_art_b"
        android:layout_marginLeft="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Album Name Here"
        android:id="@+id/textview_album_name_b"
        android:layout_toEndOf="@+id/imageview_album_art_b"
        android:layout_toRightOf="@+id/imageview_album_art_b"
        android:layout_below="@+id/textview_artist_name_b"
        android:layout_marginLeft="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_song_image"
        android:src="@drawable/common_signin_btn_icon_focus_dark"
        android:layout_toEndOf="@+id/textview_album_name_b"
        android:layout_alignBottom="@+id/imageview_album_art_b"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
