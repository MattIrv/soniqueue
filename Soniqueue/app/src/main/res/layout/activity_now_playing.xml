<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mattirv.soniqueue.NowPlaying">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Party name here"
        android:id="@+id/textview_party_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:ellipsize="marquee"
        android:lines="1" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textview_party_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="#ffd8e3ff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_now_playing_art"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_marginTop="19dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:background="#ffffac6e"
        android:layout_below="@+id/textview_party_name"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Song Name Here"
        android:id="@+id/textview_now_playing_song"
        android:layout_alignTop="@+id/imageview_now_playing_art"
        android:layout_toLeftOf="@+id/imageview_now_playing_art"
        android:layout_toStartOf="@+id/imageview_now_playing_art"
        android:layout_marginRight="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Queued by USER"
        android:id="@+id/textview_now_playing_queued"
        android:layout_alignBottom="@+id/imageview_now_playing_art"
        android:layout_toLeftOf="@+id/imageview_now_playing_art"
        android:layout_toStartOf="@+id/imageview_now_playing_art"
        android:layout_marginRight="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist Name Here"
        android:id="@+id/textview_now_playing_artist"
        android:layout_toStartOf="@+id/imageview_now_playing_art"
        android:layout_below="@+id/textview_now_playing_song"
        android:layout_toLeftOf="@+id/imageview_now_playing_art"
        android:layout_marginRight="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Album Name Here"
        android:id="@+id/textview_now_playing_album"
        android:layout_toStartOf="@+id/imageview_now_playing_art"
        android:layout_below="@+id/textview_now_playing_artist"
        android:layout_toLeftOf="@+id/imageview_now_playing_art"
        android:layout_marginRight="12dp" />

</RelativeLayout>
